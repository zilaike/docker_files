[mysqld]
skip-host-cache
skip-name-resolve

#=====================made by zilaike ======================

#time format
explicit_defaults_for_timestamp = false
#bin log
log-bin=mysql-bin
binlog_format=row
server-id = 1
expire_logs_days = 10
#slow sql
slow_query_log=1
slow-query-log-file=/var/log/mysql/mysql-slow.log
long_query_time=3